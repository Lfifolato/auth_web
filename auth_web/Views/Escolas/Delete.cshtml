@model auth_web.Models.escola

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Tem certeza de que deseja excluir?</h3>
<div>
    <h4>Escola</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.cidade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.cidade)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.contato)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.contato)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.telefone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.telefone)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <button class="btn btn-danger btn-icon-split">
            <span class="icon text-white">
                <i class="fas fa-trash-alt"></i>
            </span>
            <span class="text">Delete</span>
        </button>
        <a class="btn btn-danger btn-icon-split" asp-action="Index">
            <span class="icon text-white">
                <i class="fas fa-arrow-circle-left">Voltar</i>
            </span>
        </a>
    </form>
</div>

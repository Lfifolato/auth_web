@model auth_web.Models.escola

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Escola</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.cidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.cidade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.contato)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.contato)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.telefone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.telefone)
        </dd>
    </dl>
</div>
<a class="btn btn-primary btn-icon-split" asp-action="Edit" asp-route-id="@Model.id">
    <span class="icon text-white">
        <i class="fas fa-pencil-alt"></i>
    </span>
    <span class="text text-white">Editar</span>
</a>

<a class="btn btn-primary btn-icon-split" asp-action="Index">
    <span class="icon text-white">
        <i class="fas fa-arrow-circle-left"></i>
    </span>
    <span class="text text-white">Voltar</span>
</a>

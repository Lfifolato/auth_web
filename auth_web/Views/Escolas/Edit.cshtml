@model auth_web.Models.escola

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Escola</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="nome" class="control-label"></label>
                <input asp-for="nome" class="form-control" />
                <span asp-validation-for="nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cidade" class="control-label"></label>
                <input asp-for="cidade" class="form-control" />
                <span asp-validation-for="cidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="contato" class="control-label"></label>
                <input asp-for="contato" class="form-control" />
                <span asp-validation-for="contato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="telefone" class="control-label"></label>
                <input asp-for="telefone" class="form-control" />
                <span asp-validation-for="telefone" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-icon-split">
                <span class="icon text-white">
                    <i class="far fa-save"></i>
                </span>
                <span class="text">Salvar</span>
            </button>
            <a class="btn btn-primary btn-icon-split" asp-action="Index">
                <span class="icon text-white">
                    <i class="fas fa-arrow-circle-left">Voltar</i>
                </span>
            </a>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
